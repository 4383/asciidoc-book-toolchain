%% line spacing
\usepackage{setspace}
\onehalfspacing

\titleformat{\chapter}[display]
            {\bfseries\Huge}
            {\vspace{5pt}
              \Large\color{black}
              \chaptertitlename
              \space
              \thechapter}
            {0.5cm}
            {
              \thispagestyle{empty}
            }

\titlespacing{\chapter}{0pt}{0pt}{1in}[0.5in]

\usepackage{microtype}

\pagestyle{headings}

\renewcommand{\maketitle}{
  \begin{titlepage}
  \end{titlepage}
  \newpage
